<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.mugd.mugdapp" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CustomListViewShow"
            android:label="@string/title_activity_custom_list_view_show" >
        </activity>
        <activity
            android:name=".NavDrawerShow"
            android:label="@string/title_activity_nav_drawer_show" >
        </activity>
        <activity
            android:name=".AzureMobileService"
            android:label="@string/title_activity_azure_mobile_service" >
        </activity>
        <activity
            android:name=".AndroidDatabaseManager"
            android:label="@string/title_activity_android_database_manager" >
        </activity>
        <activity
            android:name=".EventShow"
            android:label="@string/title_activity_event_show" >
        </activity>
        <activity
            android:name=".ChatBubbleActivity"
            android:label="@string/title_activity_chat_bubble" >
        </activity>
    </application>

</manifest>
