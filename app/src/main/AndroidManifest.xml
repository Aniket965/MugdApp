<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.mugd.mugdapp" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NavDrawerShow"
            android:label="@string/title_activity_nav_drawer_show" >
        </activity>
        <activity
            android:name=".FullEventsList"
            android:label="@string/title_activity_full_events_list" >
        </activity>
        <activity
            android:name=".ShowAllEventsAdapter"
            android:label="@string/title_activity_show_all_events_adapter" >
        </activity>
        <activity
            android:name=".EventDetails"
            android:label="@string/title_activity_event_details" >
        </activity>

        <service
            android:name=".AzureMobileService"
            android:enabled="true"
            android:exported="true" >
        </service>
        <activity
            android:name=".ChatBubbleActivity"
            android:label="@string/title_activity_chat_bubble" >
        </activity>
    </application>

</manifest>
